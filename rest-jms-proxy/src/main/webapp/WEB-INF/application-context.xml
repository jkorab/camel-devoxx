<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:spring="http://camel.apache.org/schema/spring"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd
    ">

  <import resource="jms-context.xml"/>

  <bean id="servlet" class="org.apache.camel.component.servlet.ServletComponent"/>

  <camelContext id="rest-jms-proxy" xmlns="http://camel.apache.org/schema/spring" >

    <routeBuilder ref="restJmsProxy"/>

    <restConfiguration bindingMode="off" component="servlet" port="8080"/>

    <rest>
      <get uri="/ping">
        <route id="rest.ping">
          <transform>
              <constant>Pong</constant>
          </transform>
        </route>
      </get>
    </rest>

  </camelContext>

  <bean id="restJmsProxy" class="com.ameliant.devoxx.RestJmsProxyRoute">
    <property name="backendUri" value="jms:backend"/>
  </bean>

</beans>
